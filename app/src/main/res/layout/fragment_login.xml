<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/paddingMaxGlobal"
    tools:context=".ui.fragment.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connect_with"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/textSecondary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginMinGlobal"
            android:orientation="horizontal">

            <com.andexert.library.RippleView
                android:id="@+id/loginWithFace"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                ripple:rv_type="doubleRipple"
                ripple:rv_zoom="true">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginMinGlobal"
                    android:layout_marginRight="@dimen/marginMinGlobal"
                    android:background="@drawable/background_button_facebook"
                    android:textColor="@android:color/white"
                    android:text="@string/facebook"
                    android:drawableLeft="@mipmap/ic_connect_facebook"/>

            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:id="@+id/loginWithG"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                ripple:rv_type="doubleRipple"
                ripple:rv_zoom="true">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginMinGlobal"
                    android:layout_marginRight="@dimen/marginMinGlobal"
                    android:background="@drawable/background_button_g"
                    android:textColor="@android:color/white"
                    android:text="@string/google"
                    android:drawableLeft="@mipmap/ic_connect_google"/>

            </com.andexert.library.RippleView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/access_with_email"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/textSecondary"
            android:layout_marginTop="@dimen/marginMaxGlobal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_email"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:layout_weight="1"
                    android:hint="@string/email"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_password"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:hint="@string/password"
                    android:drawableRight="@mipmap/ic_visibility_off"/>

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <com.andexert.library.RippleView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginMaxGlobal"
            ripple:rv_type="doubleRipple"
            ripple:rv_zoom="true">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button"
                android:textColor="@android:color/white"
                android:text="@string/login" />

        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            ripple:rv_type="simpleRipple"
            ripple:rv_zoom="true"
            ripple:rv_color="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/textSecondary"/>

        </com.andexert.library.RippleView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_time_here"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/textSecondary"/>

        <com.andexert.library.RippleView
            android:id="@+id/signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ripple:rv_type="simpleRipple"
            ripple:rv_zoom="true"
            ripple:rv_color="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signUp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/marginMinGlobal" />

        </com.andexert.library.RippleView>
    </LinearLayout>

</FrameLayout>
