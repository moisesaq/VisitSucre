<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.OnBoardingFragment"
    android:background="@color/colorPrimary">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPagerSignUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

        <!--This indicator is for other on boarding-->
        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center_horizontal"
            android:visibility="gone"/>

    </FrameLayout>

    <View style="@style/StyleDivideVertical"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/paddingMaxGlobal">

        <ImageButton
            android:id="@+id/skip"
            android:layout_gravity="left"
            android:src="@mipmap/ic_menu_back"
            style="@style/ImageButtonCircle"
            android:background="@drawable/background_transparent"/>

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center_horizontal"/>

        <ImageButton
            android:id="@+id/next"
            android:layout_gravity="right"
            android:src="@mipmap/ic_menu_forward"
            style="@style/ImageButtonCircle"
            android:visibility="visible"
            android:background="@drawable/circle_button"/>

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/paddingMaxGlobal"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal|bottom"
        android:visibility="gone">

        <Button
            android:id="@+id/signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/background_button"
            android:textColor="@android:color/white"
            android:text="@string/signUp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="@dimen/marginMaxGlobal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_account"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/textSecondary"/>

            <TextView
                android:id="@+id/accessView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/access"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="@dimen/paddingMinGlobal" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
