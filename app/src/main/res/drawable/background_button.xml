<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/colorPrimary"/>
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary" />
            <corners
                android:radius="2dp"/>
            <padding
                android:right="12dp"
                android:bottom="12dp"
                android:left="12dp"
                android:top="12dp"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid
                android:color="@color/colorPrimary"/>
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary" />
            <corners
                android:radius="2dp"/>
            <padding
                android:right="12dp"
                android:bottom="12dp"
                android:left="12dp"
                android:top="12dp"/>
        </shape>
    </item>

</selector>